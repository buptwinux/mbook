/**index.wxss**/
.search-bar {
    width:100%;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.container {
}
.container .section {
    backgroun-color:#ccc;
}
.container .item {
    display:flex;
    border-bottom:1px solid #ccc;
    margin-top:20rpx;
}
.container .btn-container {
    display: flex;
    text-align: center;
    align-items:center;
    
}
.container .btn-container .btn {
    flex: 1;
    color: white;
    display: block;
    padding: 15rpx;
    height:26rpx;
    font-size: 26rpx;
    justify-content: space-between;
    background: green;
    border: 1rpx solid green;
    border-radius: 6rpx;
}
.book-container {
    display:flex;
    line-height:1;
}
.book-pic image{
    width: 160rpx;
    height: 160rpx;
}
.book-info {
    display:flex;
    flex-direction:column;
    padding:10rpx 0 10rpx 10rpx;
    width:450rpx;
}
.book-info .book-name, 
.book-info .author, 
.book-info .description {
    margin-bottom:10rpx;
}
.book-info .book-name {
    font-size:32rpx;
}
.book-info .author {
    font-size:26rpx;
}
.book-info .description {
    font-size:26rpx;
}
.scan-image {
    position:absolute;
    top:2rpx;
    right:10rpx;
    z-index:999;
}
.scan-image image {
    width:80rpx;
    height:50rpx;
}
